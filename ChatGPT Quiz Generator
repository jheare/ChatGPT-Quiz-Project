<!DOCTYPE html>
<html>
  <head>
    <title>Multiple Choice Quiz</title>
  </head>
  <body>
    <h1>Multiple Choice Quiz</h1>
    <p>Welcome to the multiple choice quiz! ChatGPT will provide you with a series of questions, and you will need to choose the correct answer from the options provided.</p>
    <div id="quiz-container">
      <!-- This div will contain the quiz questions and answers -->
    </div>
    <button id="next-question-button">Next Question</button>
    <!-- This button will be used to move to the next question -->
  </body>
  <script>
    // Initialize ChatGPT
    const chatbot = new ChatGPT();
    chatbot.init().then(() => {
      // Once ChatGPT is initialized, get the first question
      getNextQuestion();
    });
    
    // Function to get the next question from ChatGPT
    function getNextQuestion() {
      chatbot.send("Please provide a multiple choice question with four options.").then((response) => {
        // Parse the response to extract the question and options
        const question = extractQuestionFromResponse(response);
        const options = extractOptionsFromResponse(response);
        
        // Display the question and options on the website
        displayQuestion(question, options);
      });
    }
    
    // Function to parse the ChatGPT response and extract the question
    function extractQuestionFromResponse(response) {
  // Split the response into lines
  const lines = response.split("\n");
  
  // The question is the first line of the response
  const question = lines[0];
  
  return question;}
    
    // Function to parse the ChatGPT response and extract the options
    function extractOptionsFromResponse(response) {
  // Split the response into lines
  const lines = response.split("\n");
  
  // The options are the second, third, fourth, and fifth lines of the response
  const options = [lines[1], lines[2], lines[3], lines[4]];
  
  return options;}
    
    // Function to display the question and options on the website
    function displayQuestion(question, options) {
  // Clear the quiz container
  document.getElementById("quiz-container").innerHTML = "";
  
  // Create a div to hold the question
  const questionDiv = document.createElement("div");
  questionDiv.innerHTML = question;
  document.getElementById("quiz-container").appendChild(questionDiv);
  
  // Create a div to hold the options
  const optionsDiv = document.createElement("div");
  document.getElementById("quiz-container").appendChild(optionsDiv);
  
  // Create radio buttons for each option
  options.forEach((option) => {
    const optionLabel = document.createElement("label");
    optionLabel.innerHTML = option;
    
    const optionInput = document.createElement("input");
    optionInput.type = "radio";
    optionInput.name = "options";
    optionInput.value = option;
    
    optionsDiv.appendChild(optionInput);
    optionsDiv.appendChild(optionLabel);
  });
}
    
    // Event listener for the "Next Question" button
    document.getElementById("next-question-button").addEventListener("click", getNextQuestion);
  </script>
</html>
